<br>
 <h4> Edit Review for <%= @review.trail.name %> </h4>
<%= form_for @review do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.hidden_field :trail_id, value: @review.trail.id %>

  <p><%= f.label :Comment %><br>
  <%= f.text_area :content %></p>

  <p><%= f.submit %></p>
<% end %>

<%= link_to 'Back', trail_url(@review) %>